.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:partners, :index)
      %li=link_to pat(:new), url(:partners, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:partners)
    .inner
      %table.table
        %tr
          %th.first=mat(:partner, :name)
          %th=mat(:partner, :website)
          %th=mat(:partner, :account_id)
          %th=mat(:partner, :created_at)
          %th=mat(:partner, :updated_at)
          %th.last="&nbsp;"
        -@partners.each do |partner|
          %tr
            %td.first=partner.name
            %td=partner.website
            %td=partner.account_id
            %td=partner.created_at
            %td=partner.updated_at
            %td.last
              =button_to pat(:edit), url(:partners, :edit, :id => partner.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:partners, :destroy, :id => partner.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
