.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:streams, :index)
      %li=link_to pat(:new), url(:streams, :new)
      %li.active=link_to pat(:edit), url(:streams, :edit, :id => @stream.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:stream)
    .inner
      -form_for :stream, url(:streams, :update, :id => @stream.id), :method => :put, :class => :form do |f|
        =partial "streams/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
