.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:streamhubs, :index)
      %li=link_to pat(:new), url(:streamhubs, :new)
      %li.active=link_to pat(:edit), url(:streamhubs, :edit, :id => @streamhub.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:streamhub)
    .inner
      -form_for :streamhub, url(:streamhubs, :update, :id => @streamhub.id), :method => :put, :class => :form do |f|
        =partial "streamhubs/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
