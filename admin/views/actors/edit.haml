.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:actors, :index)
      %li=link_to pat(:new), url(:actors, :new)
      %li.active=link_to pat(:edit), url(:actors, :edit, :id => @actor.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:actor)
    .inner
      -form_for :actor, url(:actors, :update, :id => @actor.id), :method => :put, :class => :form do |f|
        =partial "actors/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
